<h1>Editing project</h1>

<%= error_messages_for :project %>

<% form_for(@project) do |f| %>
  <p>
    <b>Name</b><br />
    <%= f.text_field :name %>
  </p>

  <p>
    <b>Start</b><br />
    <%= f.date_select :start %>
  </p>

  <p>
    <b>End</b><br />
    <%= f.date_select :end %>
  </p>

  <p>
    <b>Description</b><br />
    <%= f.text_area :description %>
  </p>

  <p>
    <%= f.submit "Update" %>
  </p>
<% end %>

<%= link_to 'Show', @project %> |
<%= link_to 'Back', projects_path %>

<div style="color: red">
	<%= error_messages_for 'bounce' %>
</div>

<% form_for @bounce, :url => { :action => "create" } do |f| %>
  <%= f.label :url, 'URL' %>
  <%= f.text_field :url %><br />

  <%= f.label :public_id, 'Custom id' %>
  <%= f.text_field :public_id %><br />
  
  <%= f.submit("Create") %>
<% end %>
<h1>Portfolio</h1>

<table class="portfolio" cellspacing="0">
  <tr>
    <th>Klant</th>
    <th>Omschrijving</th>
    <th>Duur</th>
    <th>Specialismen</th>
  </tr>
  <% 
    c = 0
    @portfolio.each do |p|
    c = c + 1
  %>
  <tr class="<% if c.modulo(2) == 1 %>even<% else %>odd<% end %>">
    <td><%= p.client %></td>
    <td><%= p.description %></td>
    <td><%= p.length %> weken
    <td>
      <% p.skills.each do |s| %>
      - <%= s.name %><br />
      <% end %>
    </td>
  </tr>
  <% end%>
</table>